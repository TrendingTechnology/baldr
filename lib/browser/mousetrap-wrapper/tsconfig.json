{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "lib": ["ES6", "ES2017", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "*": [
        "./typings/*"
      ]
    }
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
