{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "baldr npm-run build",
      "type": "shell",
      "command": "baldr",
      "args": ["npm-run", "build", "${file}"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "baldr npm-run lint",
      "type": "shell",
      "command": "baldr",
      "args": ["npm-run", "lint", "${file}"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "baldr npm-run test",
      "type": "shell",
      "command": "baldr",
      "args": ["npm-run", "test", "${file}"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      },
      "options": {
        "env": {
          "FORCE_COLOR": "true"
        }
      }
    }
  ]
}
