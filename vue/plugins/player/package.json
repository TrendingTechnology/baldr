{
  "name": "@bldr/player",
  "version": "0.1.0",
  "scripts": {
    "lint": "vue-cli-service lint",
    "lint:ts-standard": "ts-standard --fix 'src/*.ts'"
  },
  "dependencies": {
    "@bldr/client-media-models": "*",
    "@bldr/icons": "*",
    "@bldr/media-resolver": "*",
    "@bldr/string-format": "*",
    "@bldr/themes": "*",
    "vue-class-component": "7.2.3",
    "vue-property-decorator": "9.1.2",
    "vue-router": "3.2.0",
    "vue": "2.6.11"
  },
  "main": "src/plugin",
  "browser": "src/plugin",
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": ["plugin:vue/essential", "@vue/typescript/recommended"],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {},
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "mocha": true
        }
      }
    ]
  },
  "browserslist": ["> 1%", "last 2 versions", "not dead"]
}
